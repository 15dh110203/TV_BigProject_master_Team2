<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Inventory</h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label>@L("InvtName")</label>
                                    <input autofocus class="form-control" type="text" name="InvtName" ng-model="vm.inventory.invtName" />
                                </div>
                                <div class="form-group">
                                    <label>@L("QtyStock")</label>
                                    <input autofocus class="form-control" type="number" name="QtyStock" ng-model="vm.inventory.qtyStock" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary blue" ng-click="vm.save(vm)" ng-show="vm.showSubmit" ng-disabled="tenantCreateForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
                                <button type="submit" class="btn btn-primary blue" ng-click="vm.edit(vm)" ng-show="vm.showEdit" ng-disabled="tenantCreateForm.$invalid"><i class="fa fa-save"></i> <span>@L("Edit")</span></button>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>
                    @L("Inventories")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i>Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Inventory tName</th>
                            <th>Quanity Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="inventory in vm.inventories">
                            <td>{{inventory.invtName}}</td>
                            <td>{{inventory.qtyStock}}</td>
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openModalForUpdate(inventory)"><i class="material-icons">create</i>Edit</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(inventory.invtID)"><i class="material-icons">delete_sweep</i>Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openModalForNew()">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>