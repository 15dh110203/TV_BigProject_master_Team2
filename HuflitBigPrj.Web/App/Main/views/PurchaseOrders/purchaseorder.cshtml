<div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card main-content">
                <div class="header">
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">PurchaseOrder</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label>@L("OrderDate")</label>
                                        <input autofocus class="form-control" type="datetime" name="orderDate" ng-model="vm.purchase.orderDate" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("OrderType")</label>
                                        <input autofocus class="form-control" type="text" name="orderType" ng-model="vm.purchase.orderType" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("OverdueDate")</label>
                                        <input autofocus class="form-control" type="datetime" name="overdueDate" ng-model="vm.purchase.overdueDate" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("DiscAmt")</label>
                                        <input autofocus class="form-control" type="text" name="AuthorName" ng-model="vm.purchase.discAmt" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("PromAmt")</label>
                                        <input autofocus class="form-control" type="text" name="AuthorName" ng-model="vm.purchase.promAmt" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("ComAmt")</label>
                                        <input autofocus class="form-control" type="text" name="AuthorName" ng-model="vm.purchase.comAmt" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("TaxtAmt")</label>
                                        <input autofocus class="form-control" type="text" name="AuthorName" ng-model="vm.purchase.taxtAmt" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("TotalAmt")</label>
                                        <input autofocus class="form-control" type="text" name="AuthorName" ng-model="vm.purchase.totalAmt" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("IsDeleted")</label>
                                        <input autofocus class="form-control" type="text" name="AuthorName" ng-model="vm.purchase.isDeleted" />
                                    </div>
                                    <div class="form-group">
                                        <label>@L("CreationTime")</label>
                                        <input autofocus class="form-control" type="datetime" name="AuthorName" ng-model="vm.purchase.creationTime" />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary blue" ng-click="vm.save(vm)" ng-show="vm.showSubmit" ng-disabled="tenantCreateForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
                                    <button type="submit" class="btn btn-primary blue" ng-click="vm.edit(vm)" ng-show="vm.showEdit" ng-disabled="tenantCreateForm.$invalid"><i class="fa fa-save"></i> <span>@L("Edit")</span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>
                        @L("PurchaseOrders")
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <i class="fa fa-spin fa-spinner" ng-if="isTableLoading"></i>
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i>Refresh</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>OrderNo</th>
                                <th>OrderDate</th>
                                <th>OrderType</th>
                                <th>OrderDueDate</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="purchase in vm.purchases">
                                <td>{{purchase.orderNo}}</td>
                                <td>{{purchase.orderDate}}</td>
                                <td>{{purchase.orderType}}</td>
                                <td>{{purchase.overdueDate | date}}</td>
                                <td class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">menu</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openModalForUpdate(purchase)"><i class="material-icons">create</i>Edit</a></li>
                                        <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(purchase.orderNo)"><i class="material-icons">delete_sweep</i>Delete</a></li>
                                    </ul>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openModalForNew()">
                        <i class="material-icons">add</i>
                    </button>
                </div>
            </div>
        </div>
    </div>

